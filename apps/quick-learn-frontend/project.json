{
 
  "name": "quick-learn-frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/quick-learn-frontend",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "quick-learn-frontend:build",
        "dev": true,
        "port": 3000
      },
      "configurations": {
        "development": {
          "buildTarget": "quick-learn-frontend:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "quick-learn-frontend:build:production",
          "dev": false
        }
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/quick-learn-frontend"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/quick-learn-frontend/src/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier --check \"apps/quick-learn-frontend/src/**/*.{ts,tsx,js,jsx}\""
        ]
      }
    },
    "lint-and-format:check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run quick-learn-frontend:lint",
          "nx run quick-learn-frontend:format:check"
        ]
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier --write \"apps/quick-learn-frontend/src/**/*.{ts,tsx,js,jsx}\""
        ]
      }
    }
  }
}