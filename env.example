# Environment Configuration
ENV=prod
NODE_ENV=production

# New Relic Configuration
NEW_RELIC_APP_NAME=Quick Learn
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key-here

# Frontend Development
NEXT_PUBLIC_BASE_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_VERSION=v1
BACKEND_BASE_API_URL=http://localhost:3001/api

# Database Configuration (External Database Server)
# Update these values to point to your existing database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=quick-learn
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_TYPE=postgres
DATABASE_SYNCHRONIZE=false
DATABASE_LOG=false
DATABASE_MAX_CONNECTIONS=100
DATABASE_SSL_ENABLED=false
DATABASE_REJECT_UNAUTHORIZED=false

# App Configuration
APP_PORT=3001
FRONTEND_DOMAIN=http://localhost:3000
BACKEND_DOMAIN=http://localhost:3001
API_PREFIX=api
APP_NAME=Quick Learn

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_REFRESH_SECRET_KEY=your-super-secret-jwt-refresh-key-here-change-this-in-production
JWT_EXPIRY_TIME=1h
JWT_REFRESH_EXPIRY_TIME=1d
JWT_REFRESH_REMEMBER_ME_EXPIRY_TIME=30d

# AWS S3 Configuration
ACCESS_KEY_ID=your-aws-access-key-id
SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1
AWS_Endpoint=https://s3.amazonaws.com

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend Configuration
NEXT_PUBLIC_BASE_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_VERSION=v1
BACKEND_BASE_API_URL=http://backend:3001/api
BUCKET_URL=https://your-bucket-url.s3.amazonaws.com

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
